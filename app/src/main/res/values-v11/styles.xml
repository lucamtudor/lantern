<resources>

    <style name="AppTheme.DarkActionBar" parent="AppTheme">
        <item name="android:actionBarStyle">@style/Widget.AppTheme.ActionBar.Solid</item>
    </style>

    <style name="AppTheme.Fullscreen.DarkActionBar" parent="AppTheme.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Solid" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
